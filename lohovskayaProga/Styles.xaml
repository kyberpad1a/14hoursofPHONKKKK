<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:lohovskayaProga">

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="#196AA6"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Fonts/TeXGyreAdventor-Regular.ttf"/>
    </Style>
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#F79420"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Fonts/TeXGyreAdventor-Regular.ttf"/>
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Fonts/TeXGyreAdventor-Bold.ttf"/>
    </Style>
    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Fonts/TeXGyreAdventor-Regular.ttf"/>
    </Style>
    <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Fonts/TeXGyreAdventor-Regular.ttf"/>
    </Style>
    

</ResourceDictionary>